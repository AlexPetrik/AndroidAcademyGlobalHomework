<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/location"
        android:layout_width="224dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/combined_shape"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/combined_shape"
            app:srcCompat="@drawable/ic_combined_shape" />

        <TextView
            android:id="@+id/movies_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/combined_shape"
            android:text="@string/movies_list"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movie"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_unit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location">

        <RelativeLayout
            android:id="@+id/mask_movie"
            android:layout_width="166dp"
            android:layout_height="248dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:background="#00000000">

            <ImageView
                android:id="@+id/movie_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/mask_main"
                android:contentDescription="@string/avengers_end_game"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/avengers_end_game_title" />

            <View
                android:id="@+id/mask"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/mask_main" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/some_id"
                android:textAppearance="@style/some_id" />

            <View
                android:id="@+id/rectangle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:alpha="0.9"
                android:background="@drawable/rectangle" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="13dp"
            android:background="#00000000"
            android:contentDescription="@string/like"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="146dp"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="214dp"
            android:layout_marginEnd="14dp"
            android:lineSpacingExtra="3sp"
            android:text="@string/action_adventure_fantasy"
            android:textAppearance="@style/tag" />

        <RelativeLayout
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@+id/tag"
            android:layout_marginTop="4dp">

            <RatingBar
                android:id="@+id/ratingBar_main"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:layout_marginBottom="116dp"
                android:numStars="5"
                android:theme="@style/ratingBar" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ratingBar_main"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="@string/_125_reviews"
                android:textAppearance="@style/review" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_min"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:layout_below="@id/reviews"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/avengers_end_game_main"
                style="avengers_end_game_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:lineSpacingExtra="4sp"
                android:text="@string/avengers_end_game"
                android:textAppearance="@style/avengers_end_game_main"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/min"
                android:layout_width="154dp"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="@string/min"
                android:textAppearance="@style/min" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>